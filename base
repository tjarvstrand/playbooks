---
- name: Create directories
  hosts: 127.0.0.1
  connection: local
  gather_facts: no
  tasks:
    - action: file
      name: Create Directories
      args:
        path: "{{item}}"
        state: directory
      with_items:
        - ~/bin
        - ~/.config
- name: Install packages
  hosts: 127.0.0.1
  connection: local
  gather_facts: no
  tasks:
    - action: apt_repository
      name: "Add apt repositories"
      args:
        repo: "{{item}}"
      with_items:
        - ppa:ubuntu-wine/ppa
        - deb http://repository.spotify.com        stable non-free
        - deb http://archive.canonical.com/ubuntu/ trusty partner
    - action: apt
      name: "Install packages"
      args:
        name: "{{item}}"
      with_items:
        - adobe-flashplugin
        - curl
        - build-essential
        - gimp
        - git
        - gnome-do
        - skype
        - synaptic
        - terminator
        - ttf-mscorefonts-installer
	- tree
        - wine

        # Emacs
        - emacs23
        - emacs23-el
        - emacs24
        - emacs24-el
        - emacs-goodies-el

        # erlang/otp
        - autoconf
        - libncurses5-dev
        - libssl-dev
        # erlang wx support
        - libwxgtk2.8-dev
        - freeglut3-dev

        # Xmonad
        - gnome-panel
        - xmonad
        - libghc-dbus-dev

        # BankID
        # - ia32-libs 
        - nspluginwrapper

        # tmux
        - libevent-dev
        - libncurses-dev
        # - autoreconf 