---
- name: Directories
  hosts: all
  tasks:
    - action: apt
      name: Install packages
      args:
        name: "{{item}}"
        force: yes
      with_items:
        - gnome-panel
        - xmonad
        - libghc-dbus-dev
        - cabal-install
    - shell: cabal update
    - shell: cabal install xmonad-extras
      name: Install xmonad-extras
    - shell: xmonad --recompile
      name: Recompile xmonad
    - shell: gsettings set org.gnome.gnome-panel.layout toplevel-id-list "['top-panel-0']"
      name: Remove all gnome panels except top

# Local Variables:
# mode: yaml
# End:
