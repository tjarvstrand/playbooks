---
- name: Configure virtualenv
  hosts: all
  tasks:
    - name: Install pip
      action: apt
      args:
        name:
          - python3-pip
          - python3-virtualenv
      become: yes
    - name: Install virtualenv
      action: pip
      args:
        name: virtualenv
        executable: pip3
      become: yes
    - name: Install libffi
      action: apt
      args:
        name: libffi-dev
      become: yes
    - name: Setup virtualenv
      action: pip
      args:
        executable: pip3
        virtualenv_site_packages: yes
        virtualenv: "{{lookup('ENV', 'HOME')}}/.virtualenv"
        name:
          - boto
          - keyring
          - requests
          - Jinja2
          - awscli
          - stashy
          - docker-compose
          - localstack
    #     - python-jenkins

    #     # Fix InsecurePlatformWarning in Python < 2.7.9
    #     - pyopenssl
    #     - ndg-httpsclient
    #     - pyasn1
    # - shell: >
    #     . {{lookup('ENV', 'HOME')}}/.virtualenv/bin/activate && python -c 'from requests import certs; print certs.where()'
    #   register: ca_cert
    # - action: file
    #   args:
    #     state: link
    #     force: true
    #     dest: "{{ca_cert.stdout}}"
    #     src: /usr/lib/ssl/certs/ca-certificates.crt
    #     follow: false

