---
- name: Spotify
  hosts: all
  become: yes
  tasks:
    - action: apt_repository
      name: Add apt repositories
      args:
        repo: "{{item}}"
      with_items:
        - "deb http://repository.spotify.com stable non-free"
    - action: apt_key
      name: Add Spotify apt key
      args:
        keyserver: hkp://keyserver.ubuntu.com:80
        id: BBEBDCB318AD50EC6865090613B00F1FD2C19886
    - action: apt
      args:
        name: "{{item}}"
      with_items:
        - spotify-client

