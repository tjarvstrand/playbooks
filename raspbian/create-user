---
- name: "Base"
  hosts: all
  become: yes
  vars:
    ansible_ssh_user: pi
    ansible_ssh_pass: raspberry
  tasks:
    - action: user
      args:
        name: tjarvstrand
        password: "$1$snt$k1egiasF3ogFi6cPceSRI/"
    - action: authorized_key
      args:
        user: tjarvstrand
        key: "{{ lookup('file', lookup('env','HOME') + '/.ssh/id_rsa.pub') }}"
    - action: lineinfile
      args:
        dest: /etc/sudoers
        regexp: '^tjarvstrand'
        line: 'tjarvstrand ALL=(ALL:ALL) ALL'
    - action: locale_gen
      args:
        name: en_US.UTF-8

